{
  "name": "ocr-desktop",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Gateweb",
    "url": "https://www.gateweb.com.tw",
    "email": "support@gateweb.com.tw"
  },
  "description": "Gateweb VAT Desktop",
  "main": "./public/electron.js",
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@material-ui/core": "^4.12.1",
    "@material-ui/data-grid": "^4.0.0-alpha.37",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "@mui/icons-material": "^5.10.2",
    "@mui/material": "^5.10.2",
    "@mui/styled-engine-sc": "^5.10.1",
    "@mui/x-data-grid": "^5.16.0",
    "@reduxjs/toolkit": "^1.9.0",
    "axios": "^1.1.3",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "fs-extra": "^10.0.0",
    "is-electron": "^2.2.0",
    "jwt-decode": "^3.1.2",
    "lowdb": "^1.0.0",
    "material-ui-image": "^3.3.2",
    "moment": "^2.29.1",
    "prop-types": "^15.8.1",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.3",
    "react-scripts": "^5.0.1",
    "react-use-websocket": "^4.2.0",
    "styled-components": "^5.3.5",
    "web-vitals": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.4",
    "@electron-forge/maker-deb": "^6.0.4",
    "@electron-forge/maker-rpm": "^6.0.4",
    "@electron-forge/maker-squirrel": "^6.0.4",
    "@electron-forge/maker-zip": "^6.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "babel-jest": "^29.3.1",
    "concurrently": "^7.5.0",
    "electron": "^17.4.11",
    "eslint": "^8.27.0",
    "eslint-plugin-react": "^7.30.1",
    "prettier": "^2.3.2",
    "recharts": "^2.0.10",
    "wait-on": "^6.0.0"
  },
  "homepage": ".",
  "scripts": {
    "start": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "build": "yarn react-build && yarn electron-build",
    "react-script-test": "react-scripts test --env=jsdom --transformIgnorePatterns \\\"node_modules/(?!axios)/\\\"",
    "test": "jest",
    "ci": "CI=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "react-start": "react-scripts start",
    "electron-start": "electron-forge start",
    "react-build": "react-scripts build",
    "electron-build": "concurrently \"yarn electron-build-win\" \"yarn.lock electron-build-mac\"",
    "electron-build-win": "react-scripts build && electron-packager ./ gw-vat-desktop --platform=win32 --arch=x64 --out=release-builds --asar --ignore=release-build --ignore=.git --ignore=node_modules/.bin --ingore=node_modules/electron-*",
    "electron-build-mac": "react-scripts build && electron-packager ./ gw-vat-desktop --platform=darwin --arch=x64 --out=release-builds --asar --ignore=release-build --ignore=.git --ignore=node_modules/.bin --ingore=node_modules/electron-* --icon ./favicon.ico",
    "electron-build-mac-arm": "react-scripts build && electron-packager ./ gw-vat-desktop --platform=darwin --arch=arm64 --out=release-builds --asar --ignore=release-build --ignore=.git --ignore=node_modules/.bin --ingore=node_modules/electron-* --icon ./favicon.ico",
    "package-windows": "react-scripts build && electron-forge package --platform=win32",
    "package-mac": "react-scripts build && electron-forge package --platform=darwin",
    "make-windows": "react-scripts build && electron-forge make --platform=win32",
    "make-mac": "react-scripts build && electron-forge package --platform=darwin"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
